<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.usp.icmc.OracleManager.MainController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#returnToLoginScreen" text="Exit">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Label text="Tables:" />
            <ChoiceBox fx:id="tables" prefWidth="150.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </ChoiceBox>
            <Button mnemonicParsing="false" onAction="#onRefreshButtonPress" text="Refresh" />
            <Button fx:id="nextButton" mnemonicParsing="false" onAction="#onNextButtonPress" text="Next">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab closable="false" text="Table">
               <content>
                  <VBox fx:id="tableTab" />
               </content>
          </Tab>
          <Tab closable="false" text="Privileges">
               <content>
                  <VBox fx:id="privilegesTab" prefHeight="200.0" prefWidth="100.0" />
               </content>
          </Tab>
            <Tab closable="false" text="Insert">
               <content>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <VBox fx:id="insertTab" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS" />
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSubmitButtonPress" text="Submit">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </Button>
                     </children></VBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
      <HBox alignment="CENTER">
         <children>
            <TextArea fx:id="messageField" editable="false" prefHeight="65.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextArea>
         </children>
      </HBox>
   </children>
</VBox>
